<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:textAlignment="center">

    <!-- Toolbar -->


    <!-- From Location -->

    <!-- To Location -->


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background_blue"
        android:elevation="4dp"
        android:paddingStart="20dp"
        app:navigationIcon="@drawable/white_arrow"
        app:title="Plan your Ride"
        app:titleTextColor="@color/white"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView7"
        android:layout_width="346dp"
        android:layout_height="177dp"
        app:cardBackgroundColor="#6A9FAFC8"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:contentDescription="From"
            android:src="@drawable/radio" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:contentDescription="From"
            android:src="@drawable/radio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="27dp"
            android:text="From"
            android:textColor="@color/overlay"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fromEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="55dp"
            android:background="@null"
            android:hint="Enter pickup location"
            android:inputType="text"
            android:textColor="#6D839D"
            android:textColorHint="#6D839D"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/check_indeterminate_small" />

        <EditText
            android:id="@+id/toEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="125dp"
            android:background="@null"
            android:hint="Enter destination"
            android:inputType="text"
            android:textColor="#6D839D"
            android:textColorHint="#6D839D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="97dp"
            android:text="To"
            android:textColor="@color/overlay"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="43dp"
            android:layout_height="34dp"
            android:layout_gravity="end"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/swap_vert" />


    </com.google.android.material.card.MaterialCardView>

    <!-- Date -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView8"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/background_white"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView7"
        app:strokeColor="#AB9CABC2"
        app:strokeWidth="2dp">


        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:text="Select date"
            android:textColor="#6D839D"
            android:textColorHint="#6D839D"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:contentDescription="Date"
            android:src="@drawable/today" />


    </com.google.android.material.card.MaterialCardView>

    <!-- Search Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/searchButton"
        android:layout_width="346dp"
        android:layout_height="65dp"
        android:layout_marginTop="223dp"
        android:text="Search"
        app:backgroundTint="#9CABC2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView8" />


</androidx.constraintlayout.widget.ConstraintLayout>